{
  "name": "campus-placement-portal",
  "version": "1.0.0",
  "description": "A comprehensive campus internship and placement portal with role-based access",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev:all",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "author": "Campus Placement Team",
  "license": "MIT",
  "dependencies": {
    "@clerk/clerk-react": "^5.56.2",
    "firebase": "^12.6.0",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.554.0",
    "react-hook-form": "^7.66.1",
    "react-hook-speech-to-text": "^0.8.0",
    "react-webcam": "^7.2.0",
    "sonner": "^2.0.7",
    "zod": "^4.1.12"
  }
}
